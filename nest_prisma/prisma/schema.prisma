// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Event {
  id        Int        @id @default(autoincrement())
  name      String
  createdAt DateTime   @default(dbgenerated("CURRENT_TIMESTAMP"))
  workshops  Workshop[]

  @@map("events")
}

model MenuItem {
  id        Int      @id @default(autoincrement())
  name      String
  url       String
  parentId  Int?
  createdAt DateTime @default(dbgenerated("CURRENT_TIMESTAMP"))

  @@map("menu_items")
}

model Workshop {
  id        Int      @id @default(autoincrement())
  name      String
  eventId   Int
  event     Event    @relation(fields: [eventId], references: [id])
  createdAt DateTime @default(dbgenerated("CURRENT_TIMESTAMP"))
  start     DateTime
  end       DateTime

  @@map("workshops")
}

model ShowRoom {
  id        Int @id @default(autoincrement())
  name      String
}

model Movie {
  id        Int @id @default(autoincrement())
  name      String
  ticketPrice Int

  @@map("movies")
}

model MovieTime {
  id        Int       @id @default(autoincrement())
  start     DateTime
  movieId   Int
  movie     Movie    @relation(fields: [movieId], references: [id])
  showRoomId Int
  showRoom ShowRoom @relation(fields: [showRoomId], references: [id])
}

model CinemaSeat {
  id        Int       @id @default(autoincrement())
  seatTypeId Int
  seatType CinemaSeatType @relation(fields: [seatTypeId], references: [id])
  showRoomId Int
  showRoom ShowRoom @relation(fields: [showRoomId], references: [id])
  locationX Int
  locationY Int
}

model CinemaSeatType {
  id        Int       @id @default(autoincrement())
  name String
  premiumPercentage Int
}

model BookedSeat {
 seatId Int
 seat CinemaSeat @relation(fields: [seatId], references: [id])
 timeId Int
 time MovieTime @relation(fields: [timeId], references: [id])
}
